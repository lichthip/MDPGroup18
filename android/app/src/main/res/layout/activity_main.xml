<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp">

    <!-- Top Row: Connection and Device Identity -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Status: Disconnected"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/connectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect" />
    </LinearLayout>

    <!-- Sub-header: Robot Position and Status -->
    <LinearLayout
        android:id="@+id/robotInfoBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/topBar">

        <TextView
            android:id="@+id/robotPosTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Robot: (2, 2) Facing: N"
            android:textColor="#0000FF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/robotStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status: Waiting..."
            android:textColor="#FF5722"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- 20x20 Arena -->
    <com.example.mdpgroup18.GridMapView
        android:id="@+id/gridMapView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#DDDDDD"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/robotInfoBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Controls Area -->
    <LinearLayout
        android:id="@+id/controlsArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/gridMapView">

        <!-- D-Pad Section (Legible Buttons) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <Button android:id="@+id/btnTL" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="TL" android:padding="0dp"/>
                <Button android:id="@+id/btnForward" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="F" android:padding="0dp"/>
                <Button android:id="@+id/btnTR" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="TR" android:padding="0dp"/>
            </LinearLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                <Button android:id="@+id/btnSL" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="SL" android:padding="0dp"/>
                <Button android:id="@+id/btnReverse" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="R" android:padding="0dp"/>
                <Button android:id="@+id/btnSR" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:text="SR" android:padding="0dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Config Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <Button android:id="@+id/btnBeginExplore" android:layout_width="match_parent" android:layout_height="45dp" android:text="Explore" />
            <Button android:id="@+id/btnSendArena" android:layout_width="match_parent" android:layout_height="45dp" android:text="Get Arena" />

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center">
                <EditText android:id="@+id/startX" android:layout_width="40dp" android:layout_height="wrap_content" android:hint="X" android:inputType="number" android:text="2"/>
                <EditText android:id="@+id/startY" android:layout_width="40dp" android:layout_height="wrap_content" android:hint="Y" android:inputType="number" android:text="2"/>
                <Button android:id="@+id/btnSetStart" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Set" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Console -->
    <ScrollView
        android:id="@+id/console"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F5F5F5"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/controlsArea"
        app:layout_constraintBottom_toTopOf="@id/inputRow">
        <TextView
            android:id="@+id/incomingMessagesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:fontFamily="monospace"
            android:padding="8dp" />
    </ScrollView>

    <!-- Manual Input Row -->
    <LinearLayout
        android:id="@+id/inputRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <EditText android:id="@+id/messageInput" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:hint="Manual Cmd..."/>
        <Button android:id="@+id/sendButton" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Send"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>